{
  "variables": {
    "dacksible_version": "a0.0",
    "mirror": "http://cdimage.debian.org/debian-cd"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<esc><wait>",
        "install <wait>",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/debian-8/preseed.cfg <wait>",
        "debian-installer=en_US <wait>",
        "auto <wait>",
        "locale=en_US <wait>",
        "kbd-chooser/method=us <wait>",
        "keyboard-configuration/xkb-keymap=us <wait>",
        "netcfg/get_hostname={{ .Name }} <wait>",
        "netcfg/get_domain=vagrantup.com <wait>",
        "fb=false <wait>",
        "debconf/frontend=noninteractive <wait>",
        "console-setup/ask_detect=false <wait>",
        "console-keymaps-at/keymap=us <wait>",
        "<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 5960,
      "guest_os_type": "Debian_64",
      "http_directory": "http",
      "iso_checksum": "5a3a023633552b2ceee0d34c541e840c0f7c50ff",
      "iso_checksum_type": "sha1",
      "iso_url": "{{user `mirror`}}/8.0.0/amd64/iso-cd/debian-8.0.0-amd64-CD-1.iso",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo 'vagrant'|sudo -S /sbin/shutdown -hP now",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "dacksible-debian-8.0-amd64",
      "output_directory": "../builds/dacksible-debian-8.0-amd64-virtualbox",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "384" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "1" ]
      ]
    },
    {
      "type": "qemu",
      "boot_command": [
        "<esc><wait>",
        "install <wait>",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/debian-8/preseed.cfg <wait>",
        "debian-installer=en_US <wait>",
        "auto <wait>",
        "locale=en_US <wait>",
        "kbd-chooser/method=us <wait>",
        "keyboard-configuration/xkb-keymap=us <wait>",
        "netcfg/get_hostname={{ .Name }} <wait>",
        "netcfg/get_domain=vagrantup.com <wait>",
        "fb=false <wait>",
        "debconf/frontend=noninteractive <wait>",
        "console-setup/ask_detect=false <wait>",
        "console-keymaps-at/keymap=us <wait>",
        "<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 5960,
      "accelerator": "kvm",
      "headless": "false",
      "http_directory": "http",
      "iso_checksum": "5a3a023633552b2ceee0d34c541e840c0f7c50ff",
      "iso_checksum_type": "sha1",
      "iso_url": "{{user `mirror`}}/8.0.0/amd64/iso-cd/debian-8.0.0-amd64-CD-1.iso",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo 'vagrant'|sudo -S /sbin/shutdown -hP now",
      "vm_name": "dacksible-debian-8.0-amd64",
      "output_directory": "../builds/dacksible-debian-8.0-amd64-qemu"
    },
    {
      "type": "vmware-iso",
      "boot_command": [
        "<esc><wait>",
        "install <wait>",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/debian-8/preseed.cfg <wait>",
        "debian-installer=en_US <wait>",
        "auto <wait>",
        "locale=en_US <wait>",
        "kbd-chooser/method=us <wait>",
        "keyboard-configuration/xkb-keymap=us <wait>",
        "netcfg/get_hostname={{ .Name }} <wait>",
        "netcfg/get_domain=vagrantup.com <wait>",
        "fb=false <wait>",
        "debconf/frontend=noninteractive <wait>",
        "console-setup/ask_detect=false <wait>",
        "console-keymaps-at/keymap=us <wait>",
        "<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 5960,
      "guest_os_type": "Debian_64",
      "http_directory": "http",
      "iso_checksum": "5a3a023633552b2ceee0d34c541e840c0f7c50ff",
      "iso_checksum_type": "sha1",
      "iso_url": "{{user `mirror`}}/8.0.0/amd64/iso-cd/debian-8.0.0-amd64-CD-1.iso",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo 'vagrant'|sudo -S /sbin/shutdown -hP now",
      "tools_upload_flavor": "linux",
      "vm_name": "dacksible-debian-8.0-amd64",
      "output_directory": "../builds/dacksible-debian-8.0-amd64-vmware",
      "vmx_data": {
        "memsize": "384",
        "numvcpus": "1",
        "cpuid.coresPerSocket": "1"
      }
    },
    {
      "type": "parallels-iso",
      "boot_command": [
        "<esc><wait>",
        "install <wait>",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/debian-8/preseed.cfg <wait>",
        "debian-installer=en_US <wait>",
        "auto <wait>",
        "locale=en_US <wait>",
        "kbd-chooser/method=us <wait>",
        "keyboard-configuration/xkb-keymap=us <wait>",
        "netcfg/get_hostname={{ .Name }} <wait>",
        "netcfg/get_domain=vagrantup.com <wait>",
        "fb=false <wait>",
        "debconf/frontend=noninteractive <wait>",
        "console-setup/ask_detect=false <wait>",
        "console-keymaps-at/keymap=us <wait>",
        "<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 5960,
      "guest_os_type": "Debian_64",
      "http_directory": "http",
      "iso_checksum": "5a3a023633552b2ceee0d34c541e840c0f7c50ff",
      "iso_checksum_type": "sha1",
      "iso_url": "{{user `mirror`}}/8.0.0/amd64/iso-cd/debian-8.0.0-amd64-CD-1.iso",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo 'vagrant'|sudo -S /sbin/shutdown -hP now",
      "parallels_tools_flavor": "lin",
      "prlctl_version_file": ".prlctl_version",
      "vm_name": "dacksible-debian-8.0-amd64",
      "output_directory": "../builds/dacksible-debian-8.0-amd64-parallels",
      "prlctl": [
        [ "set", "{{.Name}}", "--memsize", "384" ],
        [ "set", "{{.Name}}", "--cpus", "1" ]
      ]
    }

  ],
  "post-processors": [
    {
      "type": "vagrant",
      "only": ["virtualbox-iso"],
      "output": "../builds/vagrant/dacksible-debian-8.0-amd64_dacksible-{{user `dacksible_version`}}.box"
    }
  ],
  "provisioners": [
    {
      "override": {
          "virtualbox-iso": {
              "scripts": [
                "scripts/debian/update.sh",
                "scripts/common/sshd.sh",
                "scripts/debian/networking.sh",
                "scripts/debian/sudoers.sh",
                "scripts/common/vagrant.sh",
                "scripts/common/vmtools.sh",
                "scripts/common/ansible.sh",
                "scripts/common/docker.sh",
                "scripts/debian/cleanup.sh",
                "scripts/common/minimize.sh"
              ],
              "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'"
        }
      },
      "scripts": [
        "scripts/debian/update.sh",
        "scripts/common/sshd.sh",
        "scripts/debian/networking.sh",
        "scripts/debian/sudoers.sh",
        "scripts/common/vmtools.sh",
        "scripts/common/ansible.sh",
        "scripts/common/docker.sh",
        "scripts/debian/cleanup.sh",
        "scripts/common/minimize.sh"
      ],
      "type": "shell",
      "environment_vars": [ "DACKSIBLE_VERSION={{user `dacksible_version`}}" ]
    },
    {
      "type": "ansible-local",
      "playbook_file": "docker.yaml"
    }
  ]
}
