  "post-processors": [
    {
      "type": "vagrant",
      "only": ["virtualbox-iso"],
      "output": "../builds/vagrant/dacksible-ubuntu-1404-amd64_dacksible-{{user `dacksible_version`}}.box"
    }
  ],
  "provisioners": [
    {
      "override": {
          "virtualbox-iso": {
              "scripts": [
                "scripts/debian/update.sh",
                "scripts/common/sshd.sh",
                "scripts/debian/networking.sh",
                "scripts/debian/sudoers.sh",
                "scripts/common/vagrant.sh",
                "scripts/common/vmtools.sh",
                "scripts/ubuntu/ansible.sh",
                "scripts/common/docker.sh",
                "scripts/debian/cleanup.sh",
                "scripts/common/minimize.sh"
              ],
              "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'"
        }
      },
      "scripts": [
        "scripts/debian/update.sh",
        "scripts/common/sshd.sh",
        "scripts/debian/networking.sh",
        "scripts/debian/sudoers.sh",
        "scripts/common/vmtools.sh",
        "scripts/ubuntu/ansible.sh",
        "scripts/common/docker.sh",
        "scripts/debian/cleanup.sh",
        "scripts/common/minimize.sh"
      ],
      "type": "shell",
      "environment_vars": [ "DACKSIBLE_VERSION={{user `dacksible_version`}}" ]
    },
    {
      "type": "ansible-local",
      "extra_arguments": "--limit localhost",
      "inventory_file": "hosts",
      "playbook_file": "docker.yaml"
    }
